<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/spinner_ripple.xml -->
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/primary_dark"> <!-- Ripple color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/> <!-- Background color -->
            <corners android:radius="8dp"/> <!-- Rounded corners -->
            <stroke
                android:width="1dp"
                android:color="@color/primary"/> <!-- Border color -->
        </shape>
    </item>
</ripple>
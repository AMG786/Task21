<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Task21" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Task21" parent="Base.Theme.Task21" />

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <!-- Custom style for buttons -->
    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Custom style for text views -->
    <style name="CustomTextView">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Custom style for spinners -->
    <style name="CustomSpinner" >
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:background">@drawable/spinner_ripple</item> <!-- Use ripple background -->
        <item name="android:padding">12dp</item> <!-- Add padding for better appearance -->
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
</resources>